{
  "manifest_version": 3,
  "name": "Legacy領収書リダイレクター",
  "version": "1.0",
  "description": "Amazonの領収書ページを自動的にレガシー版に変換します。",
  "permissions": [
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://www.amazon.co.jp/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}